body{
	position:relative;
	font-size:9pt;
	font-family:'Lucida Grande', Verdana, Arial, Sans-Serif;
	background:#eee;
	color:#333;
	text-align:center;
	margin:0px;
}
#page {
	position:relative;
    text-align:center;
    clear: both;
	background: #2e2e2e url(images/nav_bar.jpg) repeat-x;
	margin: 0 auto;
	padding: 0;
    
    min-height:350px;
    height:auto !important; 
    height:350px; 
    overflow:visible;
}
#blogtitle {
	position:relative;
	width:740px;
	height:60px;
	margin:0 auto;
	padding:30px;
	background:url(/static/images/top_renren_805_115.jpg) top center no-repeat;
	font-family:"黑体";
	font-size:36px;
	text-align:left;
	cursor:pointer;
}
#container {
	position:relative;
	width:850px;
	background:url(/static/images/bg_container_850_22.gif) top center repeat-y; 
	margin:0px auto;
}
#containertop {
	clear: both;
	width: 850px;
	height: 20px;
	background: transparent url(/static/images/bg_container_850_200.gif) top center no-repeat;
	margin: 0 auto;
	padding: 0;
}
#containerbot {
	clear: both;
	width: 850px;
	height: 30px;
	background: url(/static/images/bg_container_850_200.gif) bottom center no-repeat;
	margin:0px auto;
	padding: 0;
}
#footer {
	color:#fff;
	clear:both;
	width:850px;
	margin:0 auto;
	padding:5px 0 10px 0;
	text-align:center;
	font-size:10px;
	background:url(/static/images/bg_footer_850_160.gif) top center no-repeat;
}
.btn{
	position:relative;
	display:block;
	top:3px;
	right:3px;
	float:right;
	padding:2px 8px;
	line-height:16px;
	border:#000000 thin 1px;
	box-sizing:border-box;
	box-shadow:none;
	outline:none;
	border-bottom:#999999 1px solid;
	border-top:#ffffff 1px solid;
	border-radius:8px;
	-moz-border-radius:8px;
	-webkit-border-radius:8px;
	-khtml-border-radius:8px;
	font-size:12px;
	cursor:pointer;
	background-color:#eeeeee;
	background-image: linear-gradient(bottom, rgb(222,222,222) 30%, rgb(240,240,240) 82%);
	background-image: -o-linear-gradient(bottom, rgb(222,222,222) 30%, rgb(240,240,240) 82%);
	background-image: -moz-linear-gradient(bottom, rgb(222,222,222) 30%, rgb(240,240,240) 82%);
	background-image: -webkit-linear-gradient(bottom, rgb(222,222,222) 30%, rgb(240,240,240) 82%);
	background-image: -ms-linear-gradient(bottom, rgb(222,222,222) 30%, rgb(240,240,240) 82%);
	background-image: -webkit-gradient(linear,left bottom,left top,color-stop(0.3, rgb(222,222,222)),color-stop(0.82, rgb(240,240,240)));
}
.btn:hover{
	opacity:0.8;
}
#nav ul {
	margin: 0;
	padding: 0;
}

#nav li {
	float:left;
	margin:0;
	padding:0;
	list-style-type: none;
}
table {
	margin: 2px auto;
	padding: 4px;
	border: 12px solid #999999;
	position:relative;
}
th { 
font: bold 11px "Trebuchet MS", Verdana, Arial, Helvetica, sans-serif; 
color: #4f6b72; 
border: 1px solid #C1DAD7; 
letter-spacing: 2px; 
text-transform: uppercase; 
text-align: left; 
padding: 6px 6px 6px 12px; 
background: #CAE8EA  no-repeat; 
} 
td { 
border: 1px solid #C1DAD7; 
background: #fff; 
font-size:11px; 
padding: 6px; 
} 
